<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;" styleClass="Pasien" stylesheets="@../Style2.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AkunController">
   <AnchorPane>
      <children>
         <BorderPane>
            <bottom>
               <VBox BorderPane.alignment="CENTER">
                  <children>
                  
                            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="562.0" text="Tambah Pengingat Baru" textAlignment="CENTER">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </Label>
                      <HBox alignment="CENTER" spacing="10">
                          <TextField fx:id="inputTanggal" promptText="yyyy-mm-dd" styleClass="contrast-textfield" />
                          <ComboBox id="combo-box" fx:id="inputJenis" promptText="Pilih Jenis" />
                          <Button onAction="#handleUnggah" text="Unggah" />
                      </HBox>
                  </children>
               </VBox>
            </bottom>
            <center>
               <TableView fx:id="tableAkun" styleClass="list-view" BorderPane.alignment="CENTER">
                 <columns>
                   <TableColumn fx:id="col1" prefWidth="272.6666259765625" text="Tanggal" />
                   <TableColumn fx:id="col2" prefWidth="286.6667175292969" text="Jenis" />
                 </columns>
                  <BorderPane.margin>
                     <Insets bottom="10.0" top="20.0" />
                  </BorderPane.margin>
               </TableView>
            </center>
            <top>
                <Label style="-fx-font-size: 18px;" text="Pengingat Pasien" BorderPane.alignment="CENTER" />
            </top>
         </BorderPane>
      </children>
   </AnchorPane>
</VBox>
