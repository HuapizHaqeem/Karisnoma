<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="400" prefWidth="600" spacing="10" style="-fx-padding: 20;" styleClass="Doctor" stylesheets="@../Style2.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RiwayatController">
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <BorderPane>
            <top>
                <Label style="-fx-font-size: 18px;" text="Riwayat Medis Pasien" BorderPane.alignment="CENTER" />
            </top>
            <center>
                
                <TableView fx:id="tableRiwayat" prefHeight="465.0" prefWidth="1134.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="colDiagnosa" prefWidth="400.0" text="Diagnosa" />
                        <TableColumn fx:id="colTerapi" prefWidth="339.0" text="Terapi" />
                        <TableColumn fx:id="colLab" prefWidth="393.0" text="Hasil Lab" />
                    </columns>
                  <BorderPane.margin>
                     <Insets bottom="20.0" top="20.0" />
                  </BorderPane.margin>
                </TableView>
            </center>
            <bottom>
            
                <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
                    <TextField fx:id="inputDiagnosa" promptText="Diagnosa" styleClass="contrast-textfield" />
                    <TextField fx:id="inputTerapi" promptText="Terapi" styleClass="contrast-textfield" />
                    <TextField fx:id="inputLab" promptText="Hasil Lab" styleClass="contrast-textfield" stylesheets="@../Style2.css" />
                  <HBox prefHeight="40.0" prefWidth="560.0" spacing="10.0">
                     <children>
                        <Button onAction="#handleTambahRiwayat" prefHeight="39.0" prefWidth="233.0" text="Tambah" />
                          <Button onAction="#handleEditRiwayat" prefHeight="39.0" prefWidth="233.0" text="Edit" />
                        <Button onAction="#handlehapusRiwayat" prefHeight="39.0" prefWidth="233.0" text="Hapus" />
                     </children>
                  </HBox>
                </HBox>
            </bottom>
         </BorderPane>
      </children>
   </AnchorPane>
</VBox>
