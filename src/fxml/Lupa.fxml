<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="543.0" prefWidth="912.0" styleClass="logo" stylesheets="@../Style3.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LupaController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <right>
            <VBox spacing="20.0" style="-fx-background-color: afeeee;" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="logoImage" fitHeight="231.0" fitWidth="221.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/4.jpeg" />
                     </image>
                  </ImageView>
                   
                                                    <TextField fx:id="inputUsername" promptText="Username" styleClass="login-button" />
                  <TextField fx:id="inputEmail" promptText="Email" styleClass="login-button" />
                   <PasswordField fx:id="inputPassword" promptText="Password Baru" styleClass="login-button" />
                   
                            <Button alignment="CENTER" contentDisplay="CENTER" onAction="#handleLogin" styleClass="login-button" text="Ubah" textAlignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#toLogin" styleClass="login-button" text="Back" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
